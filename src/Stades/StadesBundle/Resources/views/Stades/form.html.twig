        <div class="form-label"><b>{{ form_label(form.nomStade, "Nom du stade*") }}</b></div>

        {# Génération de l'input. #}
        <div class="form-input">{{ form_widget(form.nomStade) }}</div>
        
        {# Affichage des erreurs pour ce champ précis. #}
        <div class="form-error">{{ form_errors(form.nomStade) }}</div>   
    </div>
    <div class="form-row">  
    {# ADRESSE DU STADE #}
        {# Génération du label. #}
        <div class="form-label"><b>{{ form_label(form.adresseStade, "Adresse du stade") }}</b></div>
        
        {# Génération de l'input. #}
        <div class="form-input">{{ form_widget(form.adresseStade) }}</div>
        
        {# Affichage des erreurs pour ce champ précis. #}
        <div class="form-error">{{ form_errors(form.adresseStade) }}</div>     
    </div>
    <div class="form-row">   
    {# LIEN MAPS #}
        {# Génération du label. #}
        <div class="form-label"><b>{{ form_label(form.lienMaps, "Lien Google Maps*") }}</b></div>
        
        {# Génération de l'input. #}
        <div class="form-input">{{ form_widget(form.lienMaps) }}</div>
        
        {# Affichage des erreurs pour ce champ précis. #}
        <div class="form-error">{{ form_errors(form.lienMaps) }}</div>
    </div>
    <div class="form-row">
        <div class="form-label valign-top"><b>Type de terrain</b></div>
        <div class="form-input">
        {% for typeTerrain in form.typeTerrain %}
            {# TYPE TERRAIN #}
            {# Génération de l'input. #}
            {{ form_widget(typeTerrain) }}{{ form_label(typeTerrain) }}
        
            {# Affichage des erreurs pour ce champ précis. #}
            <div class="form-error">{{ form_errors(typeTerrain) }}</div>
            <br>
        {% endfor %}
        </div>
    </div>
