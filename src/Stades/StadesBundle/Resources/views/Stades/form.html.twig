        <div class="required-input">* : champs requis</div>
    </div>
    <div class="form-row">   
    {# BOUTON SAVE #}
        {# Génération de l'input. #}
        {{ form_widget(form.save, { 'label': 'Enregistrer' }) }}
        
    {# BOUTON RESET #}
        {# Génération de l'input. #}
        {{ form_widget(form.reset, { 'label': 'Annuler' }) }}
