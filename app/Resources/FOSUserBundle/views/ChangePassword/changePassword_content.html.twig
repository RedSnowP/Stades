<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
    <div class="form-row">
        <div class="form-label"><b>{{ form_label(form.current_password, "Mot de passe actuel") }}</b></div>
        <div class="form-input">{{ form_widget(form.current_password) }}</div>
        <div class="form-error">{{ form_errors(form.current_password) }}</div>
    </div>
    
    <div class="form-row">
        <div class="form-label"><b>{{ form_label(form.new.first, "Nouveau mot de passe") }}</b></div>
        <div class="form-input">{{ form_widget(form.new.first) }}</div>
        <div class="form-error">{{ form_errors(form.new.first) }}</div>
    </div>
    
    <div class="form-row">
        <div class="form-label"><b>{{ form_label(form.new.second, "Confirmation du nouveau mot de passe") }}</b></div>
        <div class="form-input">{{ form_widget(form.new.second) }}</div>
        <div class="form-error">{{ form_errors(form.new.second) }}</div>
    </div>
    
    {{ form_rest(form) }}
    
    <div>
        <input type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>
</form>
