{% extends "FOSUserBundle::layout.html.twig" %}

{% block stades_title_user %}
    Connexion
{% endblock %}

{% block stades_sub_title_user %}
    Connexion
{% endblock %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}

<h2>Connexion</h2>

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    
    <div class="form-row">
        <div class="form-label"><label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label></div>
        <div class="form-input"><input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /></div>
    </div>
    
    <div class="form-row">
        <div class="form-label"><label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label></div>
        <div class="form-input"><input type="password" id="password" name="_password" required="required" /></div>
    </div>
        
    <div class="form-row">  
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
    </div>

    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
</form>
<br><br>
    <a href="{{ path('fos_user_resetting_request') }}">
        J'ai oubli√© mon mot de passe
    </a>
{% endblock fos_user_content %}
